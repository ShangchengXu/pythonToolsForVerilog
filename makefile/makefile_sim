OUTPUT = my
export name = ${OUTPUT}
REPEAT=1
SEED=SEED_TEMP
TC=TC_TEMP
CLEAN:
	rm -rf  ./verdiLog  ./dff ./csrc *.daidir *log *.vpd *.vdb simv* *.key *race.out* *.rc *.fsdb *.vpd *.log *.conf *.dat *.conf

verdi:
	verdi -full64  -dbdir ../../build/simv.daidir/ -ssf hw.fsdb -smlog sim.log +UVM_TESTNAME=${TC} +ntb_random_seed=${SEED}
	
sim:
	python ${PYTOOLS_HOME}/main.py -c sim -n ${name}  -s ${SEED} -x ${TC} -r ${REPEAT}
